<!DOCTYPE html>
<html lang="en">

<head>
	<meta charset="UTF-8">
	<title>NFL Predictor</title>
	<link rel="stylesheet" href="/css/base.css">
	<link rel="stylesheet" href="/css/foundation.css">
	<script src="js/jquery-2.1.4.min.js"></script>

	<script src="js/foundation.js"></script>
	<script src="js/nfl.js"></script>
</head>

<body class="nfl">
	<div class="small-12 panel" id="top-panel-container">
		<div>
			<div class="text-center page-title">
				<h1><%=prediction.playername%> -  Predictions</h1>
				<img class="icon-small-title" type="image/svg+xml" src="../images/Nfl_flat.svg" />
				<span class="heading-text">Predictions for <%=prediction.season%> Season - Week <%=prediction.week%></span>
				<img class="icon-small-title" type="image/svg+xml" src="../images/Nfl_flat.svg" />
			</div>
			<div>

			</div>
			<div class="row">
				<table class="prediction-table">
					<tr class="prediction-table-header">
						<th>Road Team</th>
						<th></th>
						<th>Home Team</th>
					</tr>
					<%  var jsonFixtures = JSON.parse(fixtures);
						for(var i = 0; i < prediction.totalGames; i++){ %>
						<tr class="prediction-table-badge road-row-<%=prediction.prediction[i]%>Pick">
							<img class="team-badge away small" type="image/svg+xml" src="public/images/teams/<% jsonFixtures[i].awayTeam.team %>_logo.svg" />
						</tr>
						<tr class="prediction-table-at">@</tr>
						<tr class="prediction-table-badge home-row-<%=prediction.prediction[i]%>Pick">
							<img class="team-badge away small" type="image/svg+xml" src="public/images/teams/<% jsonFixtures[i].homeTeam.team %>_logo.svg" />
						</tr>
					<% } %>
				</table>

			</div>
		</div>

	</div>
</body>
